<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/curved_bg"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/playerAvatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/person"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/playerName"
        app:layout_constraintTop_toTopOf="@id/playerAvatar"
        app:layout_constraintLeft_toRightOf="@id/playerAvatar"
        android:layout_marginLeft="8dp"
        android:text="Luciferx86"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/playerScore"
        app:layout_constraintTop_toBottomOf="@id/playerName"
        app:layout_constraintLeft_toLeftOf="@id/playerName"
        android:layout_width="wrap_content"
        android:text="1310"
        android:layout_marginTop="10dp"
        android:textSize="9sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/playerRank"
        app:layout_constraintTop_toTopOf="@id/playerName"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:text="#3"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>