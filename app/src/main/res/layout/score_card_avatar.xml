<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/firstPlayerAvatar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="15dp"
    app:layout_constraintBottom_toTopOf="@id/firstPLayerName"
    app:layout_constraintLeft_toLeftOf="@id/firstPLayerName"
    app:layout_constraintRight_toRightOf="@id/firstPLayerName">

    <View
        android:id="@+id/face"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_face"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/hat" />

    <View
        android:id="@+id/eyes"
        android:layout_width="35dp"
        android:layout_height="15dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/ic_eyes_8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/face" />

    <View
        android:id="@+id/mouth"
        android:layout_width="31dp"
        android:layout_height="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_mouth_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/eyes" />

    <View
        android:id="@+id/hat"
        android:layout_width="49dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_hat_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>