<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/avatarLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    tools:context=".View.Activiy.CharecterGenerationActivity">

    <View
        android:id="@+id/body"
        android:layout_width="94dp"
        android:layout_height="88dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/ic_body"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/face" />

    <View
        android:id="@+id/leftLeg"
        android:layout_width="40dp"
        android:layout_height="52dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/ic_left_leg"
        app:layout_constraintRight_toRightOf="@id/body"
        app:layout_constraintTop_toTopOf="@id/body" />

    <View
        android:id="@+id/rightLeg"
        android:layout_width="40dp"
        android:layout_height="52dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/ic_right_leg"
        app:layout_constraintLeft_toLeftOf="@id/body"
        app:layout_constraintTop_toTopOf="@id/body" />

    <View
        android:id="@+id/leftArm"
        android:layout_width="39dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="75dp"
        android:background="@drawable/ic_left_arm"
        app:layout_constraintRight_toRightOf="@id/body"
        app:layout_constraintTop_toTopOf="@id/body" />

    <View
        android:id="@+id/rightArm"
        android:layout_width="39dp"
        android:layout_height="65dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_right_arm"
        app:layout_constraintLeft_toLeftOf="@id/body"
        app:layout_constraintTop_toTopOf="@id/body" />

    <View

        android:id="@+id/face"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:background="@drawable/ic_face"
        android:layout_marginTop="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/hat" />

    <View
        android:id="@+id/eyes"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_eyes_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/face" />

    <View
        android:id="@+id/mouth"
        android:layout_width="85dp"
        android:layout_height="32dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/ic_mouth_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/eyes" />

    <View
        android:id="@+id/hat"
        android:layout_width="132dp"
        android:layout_height="62dp"
        android:background="@drawable/ic_hat_11"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>