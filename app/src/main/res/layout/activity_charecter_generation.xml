<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/avatarLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:context=".View.Activiy.CharecterGenerationActivity">

        <View
            android:id="@+id/body"
            android:layout_width="143dp"
            android:layout_height="133dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/ic_body"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/face" />

        <View
            android:id="@+id/leftLeg"
            android:layout_width="60dp"
            android:layout_height="79dp"
            android:layout_marginTop="110dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/ic_left_leg"
            app:layout_constraintRight_toRightOf="@id/body"
            app:layout_constraintTop_toTopOf="@id/body" />

        <View
            android:id="@+id/rightLeg"
            android:layout_width="60dp"
            android:layout_height="79dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/ic_right_leg"
            app:layout_constraintLeft_toLeftOf="@id/body"
            app:layout_constraintTop_toTopOf="@id/body" />

        <View
            android:id="@+id/leftArm"
            android:layout_width="59dp"
            android:layout_height="99dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="110dp"
            android:background="@drawable/ic_left_arm"
            app:layout_constraintRight_toRightOf="@id/body"
            app:layout_constraintTop_toTopOf="@id/body" />

        <View
            android:id="@+id/rightArm"
            android:layout_width="59dp"
            android:layout_height="99dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_right_arm"
            app:layout_constraintLeft_toLeftOf="@id/body"
            app:layout_constraintTop_toTopOf="@id/body" />

        <View

            android:id="@+id/face"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/face"
            android:layout_marginTop="75dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/eyes"
            android:layout_width="144dp"
            android:layout_height="61dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_eyes_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/face" />

        <View
            android:id="@+id/mouth"
            android:layout_width="85dp"
            android:layout_height="32dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/ic_mouth"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/eyes" />

        <View
            android:id="@+id/hat"
            android:layout_width="209dp"
            android:layout_height="61dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_hat"
            app:layout_constraintBottom_toTopOf="@id/face"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/randomizeAvatar"
        app:layout_constraintTop_toBottomOf="@id/avatarLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Randomixe"/>
</androidx.constraintlayout.widget.ConstraintLayout>