<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/curved_bg"
    android:paddingLeft="15dp"
    android:paddingTop="5dp"
    android:paddingRight="15dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/scoreAvatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/scoreDetailsLayout"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginRight="20dp"
        android:src="@drawable/person"
        android:layout_marginEnd="2dp" />

    <LinearLayout
        app:layout_constraintLeft_toRightOf="@id/scoreAvatar"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/scoreDetailsLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginStart="2dp">

        <TextView
            android:id="@+id/scorePlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Luciferx86"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/scorePlayerScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1350"
            android:textSize="18sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>